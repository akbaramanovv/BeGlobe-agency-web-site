@model IEnumerable<BeGlobeProject.Models.Work>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkFullImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        <img style="height:120px;width:120px" src="/AddWork/RenderImage/@item.ID" />

    </td>
    <td>
        <img style="height:120px;width:120px" src="/AddWork/RenderImage2/@item.ID" />

    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
