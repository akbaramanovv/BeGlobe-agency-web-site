@model BeGlobeProject.Models.Admin
@{
    ViewBag.Title = "ChanePassword";

}
<style>
    .error {
    width: 100% !important;
    color: red !important;
     font-size: 1rem !important; 
    position: relative !important;
    line-height: 1 !important;
    width:40%!important;
}
</style>
<h2>ChangePassword</h2>

<div class="mt-5 container">
   
       
        <div class="my-3">
            <label for="name">
                Istifədəçi adı
            </label>
            <input id="name" style="width:40%" value="@Model.UserName" class="form-control" placeholder="yeni ad daxil edin" name="name" />
            <label  id="nameerr" style="display:none"></label>
        </div>
        <div class="my-3">
            <input id="old" style="width:40%" class="form-control" placeholder="əvvəlki şifrəni daxil edin" name="oldPassword" />
            <label id="oldErr" style="display:none"></label>
        </div>
        <div>
            <input id="newVal" style="width:40%" class="form-control" placeholder="yeni şifrəni daxil edin" name="newPassword" />
            <label id="newErr" style="display:none"></label>


        </div>
        <button  id="change-password" class="btn my-3 btn-outline-primary">
            Dəyiş

            <img id="loaderImg" style="display:none;height:20px;width:20px" src="~/Areas/AdminPublic/img/spinner.gif" />
        </button>
   

    <a href="/Admin/AdminHome//Index">Ana səhifəyə qayıt</a>
</div>
@section MainJS{
    <script src="~/Areas/AdminPublic/vendor/jquery/jquery.min.js"></script>

    <script src="~/Areas/AdminPublic/vendor/bootstrap/js/main2.js"></script>
    



}
